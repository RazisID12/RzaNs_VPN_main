# /etc/systemd/system/apply.path
[Unit]
Description=Watch settings.yaml and trigger apply.service
After=local-fs.target
Wants=local-fs.target
ConditionPathExists=/opt/rzans_vpn_main

[Path]
PathChanged=/opt/rzans_vpn_main/settings.yaml
PathModified=/opt/rzans_vpn_main/settings.yaml
Unit=apply.service

[Install]
WantedBy=multi-user.target
